<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xml:base="http://www.co-ode.org/ontologies/pizza/pizza.owl"
         xmlns="http://www.co-ode.org/ontologies/pizza/pizza.owl#">

<owl:Ontology rdf:about="http://www.co-ode.org/ontologies/pizza/pizza.owl">
  <rdfs:comment xml:lang="en">An example ontology that contains all constructs required for the various versions of the Pizza Tutorial run by Manchester University (see http://www.co-ode.org/resources/tutorials/)</rdfs:comment>
  <owl:versionInfo xml:lang="en">v.1.4. Added Food class (used in domain/range of hasIngredient), Added several hasCountryOfOrigin restrictions on pizzas, Made hasTopping invers functional</owl:versionInfo>
  <owl:versionInfo xml:lang="en">v.1.5. Removed protege.owl import and references. Made ontology URI date-independent</owl:versionInfo>
  <owl:versionInfo rdf:datatype="http://www.w3.org/2001/XMLSchema#string">version 1.5</owl:versionInfo>
</owl:Ontology>

<owl:ObjectProperty rdf:about="#hasIngredient"/>

<owl:ObjectProperty rdf:about="#hasTopping">
  <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#InverseFunctionalProperty"/>
  <rdfs:domain rdf:resource="#Pizza"/>
  <rdfs:range rdf:resource="#PizzaTopping"/>
  <rdfs:subPropertyOf rdf:resource="#hasIngredient"/>
  <owl:inverseOf rdf:resource="#isToppingOf"/>
  <rdfs:comment xml:lang="en">Note that hasTopping is inverse functional because isToppingOf is functional</rdfs:comment>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:about="#isToppingOf"/>

<owl:Class rdf:about="#Pizza">
  <rdfs:subClassOf rdf:resource="#Food"/>
  <owl:disjointWith rdf:resource="#PizzaTopping"/>
  <rdfs:label xml:lang="en">Pizza</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#PizzaTopping">
  <rdfs:subClassOf rdf:resource="#Food"/>
</owl:Class>

<owl:Class rdf:about="#Food">
  <rdfs:subClassOf rdf:resource="#DomainConcept"/>
</owl:Class>

<owl:Class rdf:about="#DomainConcept"/>

<owl:Class rdf:about="#CheeseTopping">
  <rdfs:subClassOf rdf:resource="#PizzaTopping"/>
  <rdfs:label xml:lang="pt">CoberturaDeQueijo</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#CheeseyPizza">
  <rdfs:subClassOf rdf:resource="http://www.co-ode.org/ontologies/pizza/pizza.owl#Pizza"/>
  <owl:equivalentClass>
    <owl:Class>
      <owl:intersectionOf rdf:parseType="Collection">
        <rdf:Description rdf:about="#Pizza"/>
        <owl:Restriction>
          <owl:onProperty rdf:resource="#hasTopping"/>
          <owl:onClass rdf:resource="#CheeseTopping"/>
          <owl:minQualifiedCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:minQualifiedCardinality>
        </owl:Restriction>
      </owl:intersectionOf>
    </owl:Class>
  </owl:equivalentClass>
  <rdfs:comment xml:lang="en">Any pizza that has at least 1 cheese topping.</rdfs:comment>
  <rdfs:label xml:lang="pt">PizzaComQueijo</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#Margherita">
  <rdfs:subClassOf rdf:resource="#Pizza"/>
  <rdfs:subClassOf>
    <owl:Restriction>
      <owl:onProperty rdf:resource="#hasTopping"/>
      <owl:someValuesFrom rdf:resource="#TomatoTopping"/>
    </owl:Restriction>
  </rdfs:subClassOf>
  <rdfs:subClassOf>
    <owl:Restriction>
      <owl:onProperty rdf:resource="#hasTopping"/>
      <owl:onClass rdf:resource="#CheeseTopping"/>
      <owl:qualifiedCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:qualifiedCardinality>
    </owl:Restriction>
  </rdfs:subClassOf>
  <rdfs:label xml:lang="pt">Margherita</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#TomatoTopping">
  <rdfs:subClassOf rdf:resource="#PizzaTopping"/>
</owl:Class>

<owl:Class rdf:about="#MozzarellaTopping">
  <rdfs:subClassOf rdf:resource="#CheeseTopping"/>
</owl:Class>


</rdf:RDF>
